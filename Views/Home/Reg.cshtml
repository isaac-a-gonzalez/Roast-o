@model User

<form asp-action="registration" asp-controller="Home" method="post">
    <h4>New Customers</h4>
    <hr>
    <br>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="PasswordConfirm"></span>
        <label asp-for="PasswordConfirm"></label>
        <input class="form-control" asp-for="PasswordConfirm">
    </div>
    <button type="submit" class="btn btn-outline-dark">Create an Account</button>
</form>
